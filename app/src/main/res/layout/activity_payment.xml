<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".summary.PaymentActivity">


    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="@null"
        android:onClick="GoToHomeScreen"
        android:src="@drawable/ic_back_black" />

    <ImageView
        android:id="@+id/order_summary_imageview"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/back_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:src="@drawable/order_summary_primary" />

    <TextView
        android:id="@+id/order_sent_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_summary_imageview"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/didact_gothic"
        android:text="Your order is requested, Thanks!"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="32sp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_sent_textview"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"
        android:background="@drawable/btn_rounded_color_accent"
        android:text="GO HOME"
        android:textColor="@android:color/white"
        android:onClick="GoToHomeScreen" />

</RelativeLayout>